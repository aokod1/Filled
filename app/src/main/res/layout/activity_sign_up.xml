<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".signUp"
    android:id="@+id/RelativeLayout"
    android:background="#ffffffff">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="cursive"
        android:text="@string/signup"
        android:textSize="50sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/homeKeyboard"
        android:layout_width="58dp"
        android:layout_height="38dp"
        android:layout_alignStart="@+id/homeAdapter"
        android:layout_below="@+id/textView2"
        android:layout_weight="1"
        android:src="@drawable/keyboard"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/homeLaptop"
        android:layout_width="58dp"
        android:layout_height="38dp"
        android:layout_alignBottom="@+id/homeKeyboard"
        android:layout_marginStart="19dp"
        android:layout_toEndOf="@+id/nameEditText"
        android:src="@drawable/laptop"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/homeprinter"
        android:layout_width="58dp"
        android:layout_height="38dp"
        android:layout_alignEnd="@+id/homeLaptop"
        android:layout_below="@+id/homeLaptop"
        android:layout_weight="1"
        android:src="@drawable/printer"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/homeAdapter"
        android:layout_width="58dp"
        android:layout_height="38dp"
        android:layout_alignEnd="@+id/textView4"
        android:layout_below="@+id/homeKeyboard"
        android:layout_weight="1"
        android:src="@drawable/server"
        android:visibility="visible" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/nameEditText"
        android:layout_below="@+id/homeAdapter"
        android:fontFamily="cursive"
        android:text="@string/name"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/nameEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="John Doe"
        android:inputType="textPersonName"
        android:layout_below="@+id/textView3"
        android:layout_alignStart="@+id/textView4" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="cursive"
        android:text="@string/cell"
        android:textSize="30sp"
        android:layout_below="@+id/emailEditText"
        android:layout_alignStart="@+id/cellEditTetx"
        android:layout_marginTop="18dp" />

    <EditText
        android:id="@+id/cellEditTetx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="phone"
        android:hint="0835681244"
        android:layout_below="@+id/textView4"
        android:layout_alignStart="@+id/textView5" />


    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="cursive"
        android:text="@string/passw"
        android:textSize="30sp"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/cellEditTetx"
        android:layout_toStartOf="@+id/textView2" />

    <EditText
        android:id="@+id/passTextEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/passw"
        android:inputType="textPassword"
        android:layout_below="@+id/textView5"
        android:layout_alignStart="@+id/textView5" />

    <Button
        android:id="@+id/subBttn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/bckBttn"
        android:layout_alignBottom="@+id/bckBttn"
        android:layout_alignStart="@+id/passTextEdit"
        android:onClick="onClick"
        android:text="@string/submit"
        tools:clickable="true" />

    <Button
        android:id="@+id/bckBttn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="18dp"
        android:layout_toEndOf="@+id/textView2"
        android:onClick="onClick"
        android:text="@string/back"
        tools:clickable="true" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/nameEditText"
        android:layout_below="@+id/nameEditText"
        android:layout_marginTop="11dp"
        android:fontFamily="cursive"
        android:text="@string/email"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/emailEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="John@company.co.za"
        android:inputType="textEmailAddress"
        android:layout_below="@+id/textView7"
        android:layout_alignStart="@+id/textView7" />
</RelativeLayout>